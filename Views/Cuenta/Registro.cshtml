@{
}
@model SaludTotalWeb.Models.ViewModels.PacienteRegistroViewModel
@{
    ViewData["Title"] = "Registro de Paciente";
}

<h2 class="text-center mb-4">Registro de Paciente</h2>

<form asp-action="Registro" method="post">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Apellido"></label>
            <input asp-for="Apellido" class="form-control" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="DNI"></label>
            <input asp-for="DNI" class="form-control" />
            <span asp-validation-for="DNI" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="FechaNacimiento"></label>
            <input asp-for="FechaNacimiento" class="form-control" />
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Sexo"></label>
            <select asp-for="Sexo" class="form-control">
                <option>Masculino</option>
                <option>Femenino</option>
                <option>Otro</option>
            </select>
            <span asp-validation-for="Sexo" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Direccion"></label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Obra_Social"></label>
            <input asp-for="Obra_Social" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Numero_Afiliado"></label>
            <input asp-for="Numero_Afiliado" class="form-control" />
        </div>

        <div class="col-md-12 mb-3">
            <label asp-for="Enfermedades"></label>
            <textarea asp-for="Enfermedades" class="form-control"></textarea>
        </div>

        <div class="col-md-12 mb-3">
            <label asp-for="Alergias"></label>
            <textarea asp-for="Alergias" class="form-control"></textarea>
        </div>

        <div class="col-md-12 mb-3">
            <label asp-for="Medicacion"></label>
            <textarea asp-for="Medicacion" class="form-control"></textarea>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Contraseña"></label>
            <input asp-for="Contraseña" class="form-control" type="password" />
            <span asp-validation-for="Contraseña" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="ConfirmarContraseña"></label>
            <input asp-for="ConfirmarContraseña" class="form-control" type="password" />
            <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

    </div>

    <button type="submit" class="btn btn-primary w-100">Registrarse</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

