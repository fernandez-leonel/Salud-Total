@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SaludTotal - Bienvenido</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #0b1d33;
            color: white;
            font-family: Arial, sans-serif;
            padding-top: 60px;
        }

        .container {
            max-width: 450px;
            margin: auto;
            text-align: center;
        }

        .login-box {
            background-color: white;
            color: black;
            padding: 30px;
            border-radius: 15px;
            margin-top: 30px;
        }

        .btn-custom {
            width: 100%;
        }

        img {
            width: 80px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <img src="https://img.icons8.com/fluency/96/doctor-male.png" alt="SaludTotal" />
        <h1>SaludTotal</h1>
        <p class="mb-4">Bienvenido a una solución ideal para gestionar servicios de salud,<br />disponible en cualquier momento y lugar</p>

        <div class="login-box shadow">
            <h4 class="mb-4">INICIAR SESIÓN</h4>
            <form asp-controller="Cuenta" asp-action="Login" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Usuario *" name="Username" required />
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Password *" name="Password" required />
                </div>
                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" id="recordarme" name="Recordarme">
                    <label class="form-check-label" for="recordarme">Recordarme</label>
                </div>
                <button type="submit" class="btn btn-primary btn-custom">INICIAR</button>
            </form>
            <hr />
            <a asp-controller="Cuenta" asp-action="Registro" class="btn btn-outline-secondary btn-custom">Registrarse</a>
        </div>
    </div>
</body>
</html>

