@{
}
@model List<SaludTotalWeb.Models.Especialidad>

@{
    ViewData["Title"] = "Nuestros Profesionales";
}

<h2>Nuestros Profesionales</h2>

@foreach (var especialidad in Model)
{
    <div class="mb-4">
        <h4>@especialidad.Nombre</h4>
        <ul>
            @foreach (var profesional in especialidad.Profesionales)
            {
                <li>@profesional.Nombre @profesional.Apellido - Matrícula: @profesional.Matricula</li>
            }
        </ul>
    </div>
}
