@{
}
@model List<SaludTotalWeb.Models.Especialidad>

@{
    ViewData["Title"] = "Profesionales por Especialidad";
}

<h2>Profesionales disponibles</h2>

@foreach (var especialidad in Model)
{
    <div class="card mb-3">
        <div class="card-header bg-primary text-white">
            <strong>@especialidad.Nombre</strong>
        </div>
        <ul class="list-group list-group-flush">
            @foreach (var profesional in especialidad.Profesionales)
            {
                <li class="list-group-item">
                    Dr. @profesional.Nombre @profesional.Apellido - Matrícula: @profesional.Matricula
                </li>
            }
        </ul>
    </div>
}
